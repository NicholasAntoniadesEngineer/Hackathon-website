
@{
    ViewData["Title"] = "Dashboard";
}

    <div class="row">

        <div class="dropdown col-md-12">
            <button class="investmentButton dropdown-toggle" type="button" data-toggle="dropdown">Budget Planner</button>
            <ul class="dropdown-menu investmentDropDown" >
                <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
                <h2>Budget Pie Chart</h2>
                <div class="row pieRow">
                    <div class="col-md-4">
                        <p>What is your monthly budget?</p>
                        <form id="form1" onsubmit="drawChart(); return false">
                            <label for="Expensesvar">Expenses: </label><input type="text" id="Expensesvar"><br>
                            <label for="Incomevar">Income: </label><input type="text" id="Incomevar"><br>
                            <label for="Debtvar">Debt: </label><input type="text" id="Debtvar"><br>
                            <label for="Savingsvar">Savings: </label><input type="text" id="Savingsvar"><br>

                            <button type="submit" value="Submit" class="pieButton">Create Chart</button>
                        </form>
                    </div>
                    <div class="col-md-8">
                        <div id="piechart"></div>
                    </div>
                </div>
            </ul>
        </div>

        <div class="dropdown col-md-12">
        <button class="investmentButton dropdown-toggle" type="button" data-toggle="dropdown">Debt Calculator</button>
        <ul class="dropdown-menu investmentDropDown">
            <div class="col-md-6">
                <h2>Simple Interest</h2>
                <form>
                    <div class="col-md-5">Total Debt : </div><div class="col-md-7"><input type="text" id="firstNumber" /></div><br>
                    <div class="col-md-5">Payment Period (Yearly): </div><div class="col-md-7"><input type="text" id="secondNumber" /></div><br>
                    <div class="col-md-5">Interest: </div><div class="col-md-7"><input type="text" id="thirdNumber" /></div><br>
                    <div class="col-md-12"><input type="button" onclick="simpleInterest()" Value="Calculate" /></div><br>
                </form>
                <div class="col-md-12"><br><p>Monthly payment : <span id="result"></span><br></p></div>
            </div>
            <div class="col-md-6">
                <h2>Compund Interest</h2>
                <form>
                    <div class="col-md-5">Total Debt : </div><div class="col-md-7"><input type="text" id="firstNumberC" /></div><br>
                    <div class="col-md-5">Payment Period (Yearly): </div><div class="col-md-7"><input type="text" id="secondNumberC" /></div><br>
                    <div class="col-md-5">Interest: </div><div class="col-md-7"><input type="text" id="thirdNumberC" /></div><br>
                    <div class="col-md-12"><input type="button" onclick="compoundInterest()" Value="Calculate" /></div><br>
                </form>
                <div class="col-md-12"><br><p>Monthly payment : <span id="compoundresult"></span><br></p></div>
            </div>
        </ul>
    </div>

        <div class="dropdown col-md-12">
            <button class="investmentButton dropdown-toggle" type="button" data-toggle="dropdown">Investment</button>
            <ul class="dropdown-menu investmentDropDown">
                <li class="investmentOptions"><a href="">Types of investment</a> </li></br>
                <li class="investmentOptions"><a href="https://www.allangray.co.za/what-we-offer/investing-with-us/">Investing with Allan Gray</a></li></br>
                <li class="investmentOptions"><a href="https://www.allangray.co.za/investment-value-calculator/?utm_source=google&utm_medium=cpc&utm_campaign=compound_interest_calculator&utm_content=investment_calculator_ex&gclid=Cj0KCQjw84XtBRDWARIsAAU1aM3O9aL2d-tgjbZ9p9poHqbGBHWuVznU5C6upDT1C_jyJg0w_yhqWOMaAmoCEALw_wcB&gclsrc=aw.ds#welcome">Allan Gray Investment Calculator</a></li></br>
            </ul>
        </div>

    </div>
